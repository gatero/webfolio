//- layout.jade
include ./mixins.jade

doctype html
html(lang="en")
  head
    //- title
    block title

    //- meta tags
    +meta_tags

    // build:css(.tmp) /styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='../bower_components/font-awesome/css/font-awesome.css')
    link(rel='stylesheet', href='../bower_components/devicon/devicon.min.css')
    link(rel='stylesheet', href='../bower_components/onepage-scroll/onepage-scroll.css')
    // endbower
    // endbuild

    // build:css1(.tmp) /styles/main.css
    link(rel='stylesheet', href='/styles/main.css')
    // endbuild

  body

    //- header
    //- +header

    //- content
    block content

    //- footer
    +footer

    // build:js /scripts/vendor.js
    // bower:js
    script(src='../bower_components/modernizr/modernizr.js')
    script(src='../bower_components/jquery/dist/jquery.js')
    script(src='../bower_components/jquery-ui/jquery-ui.js')
    script(src='../bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='../bower_components/heartcode-canvasloader/index.js')
    script(src='../bower_components/onepage-scroll/jquery.onepage-scroll.js')
    // endbower
    // endbuild

    // build:js1(.tmp) /scripts/main.js
    script(src='/scripts/main.js')
    // endbuild
